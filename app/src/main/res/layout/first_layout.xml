<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txthome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:background="#003366"
            android:textColor="#ffffff"
            android:onClick="onClick"
            android:clickable="true"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/custom_border">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/emblem"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="270dp"

                        android:background="@drawable/healing"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/academic1"
                        android:text="Students let out their hurts during the Nairobi Campus Healing Forum"
                        android:textColor="#000000"
                        android:layout_marginTop="20dp"
                        android:onClick="onClick" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_border">

                        <ImageView

                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/nyakeya" />

                        <TextView
                            android:id="@+id/academic2"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:textColor="#000000"
                            android:onClick="onClick"
                            android:layout_marginTop="20dp"
                            android:text="PS Irungu Nyakera Speaks to MBA Students" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_border">

                        <ImageView
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/crypto"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:id="@+id/academic3"
                            android:textColor="#000000"
                            android:onClick="onClick"
                            android:text="Economics School Hosts Crypto-Currency Talk"
                            android:layout_marginTop="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_border">

                        <ImageView
                            android:layout_width="170dp"
                            android:layout_height="100dp"

                            android:layout_margin="5dp"
                            android:background="@drawable/nderu"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:id="@+id/academic4"
                            android:textColor="#000000"
                            android:onClick="onClick"
                            android:text="DLPDI launches Nderu Ex-Candidates programme"
                            android:layout_marginTop="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_border">

                        <ImageView
                            android:layout_width="170dp"
                            android:layout_height="100dp"

                            android:layout_margin="5dp"
                            android:background="@drawable/calvin"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:onClick="onClick"
                            android:textColor="#000000"
                            android:id="@+id/academic5"
                            android:text="Calvin College Visits Daystar University"
                            android:layout_marginTop="20dp" />

                    </LinearLayout>

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal"
                        android:background="@drawable/custom_border">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/konrad"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:onClick="onClick"
                        android:textColor="#000000"
                        android:id="@+id/academic6"
                        android:text="Konrad Adenauer Foundation Donates Books to School of Law"
                        android:layout_marginTop="20dp" />

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:background="@drawable/custom_border"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/impact"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:onClick="onClick"
                            android:textColor="#000000"
                            android:id="@+id/academic7"
                            android:text="Impact Africa Network"
                            android:layout_marginTop="20dp" />

                    </LinearLayout>


                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>

    </LinearLayout>


</ScrollView>
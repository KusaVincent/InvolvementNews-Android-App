<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txthome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:background="#003366"
            android:textColor="#ffffff"
            android:clickable="true"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/emblem"/>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/custom_border">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:id="@+id/img2"
                        android:background="@drawable/falcons"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/sports2"
                        android:text="Daystar Falcons Fetes Exemplary Characters"
                        android:textColor="#000000"
                        android:layout_marginTop="20dp"
                        android:onClick="onClick" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_border">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/dsl" />

                        <TextView
                            android:id="@+id/sports3"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:textColor="#000000"
                            android:onClick="onClick"
                            android:layout_marginTop="20dp"
                            android:text="The Daystar Soccer League: Specifics of How It Came To Be" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_border">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:id="@+id/img4"
                            android:layout_margin="5dp"
                            android:background="@drawable/rugby"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:id="@+id/sports4"
                            android:textColor="#000000"
                            android:onClick="onClick"
                            android:text="Daystar Falcons beat Cooperative University 19:7"
                            android:layout_marginTop="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_border">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:id="@+id/img5"
                            android:layout_margin="5dp"
                            android:background="@drawable/pole2"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:id="@+id/sports5"
                            android:textColor="#000000"
                            android:onClick="onClick"
                            android:text="Pole dancing for fitness"
                            android:layout_marginTop="20dp" />

                    </LinearLayout>



                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>

    </LinearLayout>


</ScrollView>
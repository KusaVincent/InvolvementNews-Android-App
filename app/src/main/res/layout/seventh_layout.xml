<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txthome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:background="#003366"
            android:textColor="#ffffff"
            android:clickable="true"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/emblem"/>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/custom_border">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:id="@+id/img2"
                        android:background="@drawable/lukenya2"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/features2"
                        android:text="Lukenya Pillars of Transformation Is the Place to Be"
                        android:textColor="#000000"
                        android:layout_marginTop="20dp"
                        android:onClick="onClick" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_border">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/tax" />

                        <TextView
                            android:id="@+id/features3"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:textColor="#000000"
                            android:onClick="onClick"
                            android:layout_marginTop="20dp"
                            android:text="Filing Returns" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_border">

                        <ImageView
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:id="@+id/img4"
                            android:layout_margin="5dp"
                            android:background="@drawable/bland"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:id="@+id/features4"
                            android:textColor="#000000"
                            android:onClick="onClick"
                            android:text="Entertainment Profile: Dove Slimme"
                            android:layout_marginTop="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_border">

                        <ImageView
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:id="@+id/img5"
                            android:layout_margin="5dp"
                            android:background="@drawable/bland"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:id="@+id/features5"
                            android:textColor="#000000"
                            android:onClick="onClick"
                            android:text="Game review: Metro Exodus"
                            android:layout_marginTop="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_border">

                        <ImageView
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:id="@+id/img6"
                            android:layout_margin="5dp"
                            android:background="@drawable/bland"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:onClick="onClick"
                            android:textColor="#000000"
                            android:id="@+id/features6"
                            android:text="Hurricane Maria; the Aftermath and road to recovery"
                            android:layout_marginTop="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_border">

                        <ImageView
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:id="@+id/img7"
                            android:layout_margin="5dp"
                            android:background="@drawable/bland"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:onClick="onClick"
                            android:textColor="#000000"
                            android:id="@+id/features7"
                            android:text="Overspending: An unexpected grace"
                            android:layout_marginTop="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:orientation="horizontal"
                        android:background="@drawable/custom_border">

                        <ImageView
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:id="@+id/img8"
                            android:layout_margin="5dp"
                            android:background="@drawable/bland"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:onClick="onClick"
                            android:textColor="#000000"
                            android:id="@+id/features8"
                            android:text="Female artists and rap music win big at the 2019 Grammy Awards"
                            android:layout_marginTop="20dp" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>

    </LinearLayout>


</ScrollView>